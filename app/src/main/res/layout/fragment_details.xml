<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_details_historyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="@string/tv_case_history"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="end|center"
                android:background="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/avatar"
            android:src="@drawable/ic_avatar_male"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_details_historyLabel" />

        <TextView
            android:id="@+id/tv_details_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@+id/ll_details_historyLabel"
            tools:ignore="TextContrastCheck"
            tools:text="@string/name" />

        <TextView
            android:id="@+id/tv_details_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_details_type"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_details_name"
            tools:ignore="TextContrastCheck"
            tools:text="@string/age" />

        <TextView
            android:id="@+id/tv_details_diagnosis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_details_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_details_age"
            app:layout_constraintTop_toTopOf="@+id/tv_details_age"
            tools:ignore="TextContrastCheck"
            tools:text="@string/diagnosis" />

        <TextView
            android:id="@+id/tv_details_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
            tools:ignore="TextContrastCheck"
            tools:text="@string/case_type" />

        <TextView
            android:id="@+id/tv_details_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_type"
            tools:ignore="TextContrastCheck"
            tools:text="@string/gender" />

        <TextView
            android:id="@+id/tv_details_totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_gender"
            tools:ignore="TextContrastCheck"
            tools:text="@string/total_price" />

        <TextView
            android:id="@+id/tv_details_paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_totalPrice"
            tools:ignore="TextContrastCheck"
            tools:text="@string/amount_paid" />

        <TextView
            android:id="@+id/tv_details_remainingMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_paid"
            tools:ignore="TextContrastCheck"
            tools:text="@string/amount_remaining" />

        <TextView
            android:id="@+id/tv_details_totalSessions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_remainingMoney"
            tools:ignore="TextContrastCheck"
            tools:text="@string/total_sessions" />


        <TextView
            android:id="@+id/tv_details_takenSessions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginTop="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_totalSessions"
            tools:ignore="TextContrastCheck"
            tools:text="@string/taken_sessions" />

        <TextView
            android:id="@+id/tv_details_remainingSessions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_takenSessions"
            tools:ignore="TextContrastCheck"
            tools:text="@string/remaining_sessions" />

        <TextView
            android:id="@+id/tv_details_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:minHeight="24dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_remainingSessions"
            tools:ignore="TextContrastCheck"
            tools:text="@string/notes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_details_totalPrice"
            app:layout_constraintStart_toEndOf="@+id/tv_details_totalPrice"
            app:layout_constraintTop_toTopOf="@+id/tv_details_totalPrice">

            <ImageButton
                android:id="@+id/imgBtn_add_tPrice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/add_circle" />

            <ImageButton
                android:id="@+id/imgBtn_minus_tPrice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/remove_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_details_paid"
            app:layout_constraintStart_toEndOf="@+id/tv_details_paid"
            app:layout_constraintTop_toTopOf="@+id/tv_details_paid">

            <ImageButton
                android:id="@+id/imgBtn_add_paid"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/add_circle" />

            <ImageButton
                android:id="@+id/imgBtn_minus_paid"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/remove_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_details_totalSessions"
            app:layout_constraintStart_toEndOf="@+id/tv_details_totalSessions"
            app:layout_constraintTop_toTopOf="@+id/tv_details_totalSessions">

            <ImageButton
                android:id="@+id/imgBtn_add_tSessions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/add_circle" />

            <ImageButton
                android:id="@+id/imgBtn_minus_tSessions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/remove_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_details_takenSessions"
            app:layout_constraintStart_toEndOf="@+id/tv_details_takenSessions"
            app:layout_constraintTop_toTopOf="@+id/tv_details_takenSessions">

            <ImageButton
                android:id="@+id/imgBtn_add_takenSessions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/add_circle" />

            <ImageButton
                android:id="@+id/imgBtn_minus_takenSessions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:background="@color/white"
                android:contentDescription="@string/image_button_desc"
                android:padding="8dp"
                android:src="@drawable/remove_circle" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_details_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_details_notes" />

        <TextView
            android:id="@+id/tv_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/date_of_admission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btn_details_edit"
            app:layout_constraintTop_toBottomOf="@+id/btn_details_edit" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>